<div class="container offset text-center">
  <h1>Member Home</h1>
  <div class="col-md-12">
    <div class="col-md-6">
      <h3>Funds In My Portfolio</h3>
      <% @portfolio.each do |fund| %>
        <a class="fund-link-btn" href="<%= fund_path fund %>"><button class="fund-details-button"><%= fund.name %></button></a>
      <% end %>
    </div>
    <div class="col-md-6">
      <h3>My Information</h3>
      <div class="col-xs-4">
        <h4 class="text-right">Email: </h4>
      </div>
      <div class="col-xs-8">
        <p class="text-left" style="margin-bottom: 0; margin-top: 7px;"><%= @user.email %></p>
      </div>
    </div>
  </div>
</div>
